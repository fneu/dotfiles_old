#! /bin/bash

action=$(echo -e "Sperren\nEnergie sparen\nHerunterfahren\nNeu starten" | rofi -dmenu -p Verlassen -l 4 -i)
if [ "$action" == "Sperren" ]
then
dm-tool lock
elif [ "$action" == "Energie sparen" ]
then
systemctl suspend
elif [ "$action" == "Herunterfahren" ]
then
systemctl poweroff
elif [ "$action" == "Neu starten" ]
then
systemctl reboot
fi
