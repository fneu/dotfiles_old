#! /bin/bash

action=$(echo -e "Sperren\nEnergie sparen\nHerunterfahren\nNeu starten\nWindows starten" | rofi -dmenu -p Verlassen -l 5 -i)
if [ "$action" == "Sperren" ]
then
dm-tool lock
elif [ "$action" == "Energie sparen" ]
then
systemctl suspend
elif [ "$action" == "Herunterfahren" ]
then
systemctl poweroff
elif [ "$action" == "Neu starten" ]
then
systemctl reboot
elif [ "$action" == "Windows starten" ]
then
sudo grub2-reboot 2 && systemctl reboot
fi
